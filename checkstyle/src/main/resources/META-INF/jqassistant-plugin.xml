<jqa-plugin:jqassistant-plugin xmlns:jqa-plugin="http://www.buschmais.com/jqassistant/core/plugin/schema/v1.0" name="Checkstyle">
    <description>Provides a scanner for Checkstyle XML result files.</description>
    <model>
        <class>de.kontext_e.jqassistant.plugin.checkstyle.store.descriptor.CheckstyleReportDescriptor</class>
        <class>de.kontext_e.jqassistant.plugin.checkstyle.store.descriptor.CheckstyleErrorDescriptor</class>
        <class>de.kontext_e.jqassistant.plugin.checkstyle.store.descriptor.CheckstyleFileDescriptor</class>
    </model>
    <scanner>
        <class>de.kontext_e.jqassistant.plugin.checkstyle.scanner.CheckstyleScannerPlugin</class>
    </scanner>
    <rules>
        <resource>checkstyle.xml</resource>
    </rules>
</jqa-plugin:jqassistant-plugin>
