<jqa-plugin:jqassistant-plugin xmlns:jqa-plugin="http://www.buschmais.com/jqassistant/core/plugin/schema/v1.0" name="cpp">
    <description>Provides a scanner for Checkstyle XML result files.</description>
    <model>
        <class>de.kontext_e.jqassistant.plugin.cpp.store.descriptor.CppClangAstDescriptor</class>
        <class>de.kontext_e.jqassistant.plugin.cpp.store.descriptor.ClassDescriptor</class>
    </model>
    <scanner>
        <class>de.kontext_e.jqassistant.plugin.cpp.scanner.CppScannerPlugin</class>
    </scanner>
    <rules>
        <resource>cpp.xml</resource>
    </rules>
</jqa-plugin:jqassistant-plugin>
